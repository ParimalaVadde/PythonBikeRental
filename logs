def retrieve(self, username):

        result = None
        try:
            conn = Connect()
            cursor = conn.db.cursor()
            cursor.execute(
                """
                SELECT * FROM client WHERE username=%(username)s
                """, {'username': username}
            )
            result = cursor.fetchone()
        except Exception as e:
            logger.error('Could not retrieve the records: %s' % e)
            exc_type, exc_value, exc_traceback = sys.exc_info()
            description = {
                'formatted_lines': traceback.format_exc().splitlines(),
                'format_exception': repr(traceback.format_exception(
                                         exc_type, exc_value, exc_traceback)),
                'extract_tb': repr(traceback.extract_tb(exc_traceback)),
                'format_tb': traceback.format_tb(exc_traceback),
                'tb_lineno': exc_traceback.tb_lineno
            }
            return ('{formatted_lines} {format_exception} {extract_tb} '
                    '{format_tb} {tb_lineno}').format(**description)
        finally:
            conn.db.close()
        return result
		
		
		
		
